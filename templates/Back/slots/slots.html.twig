{% extends "base.html.twig" %}
{% block title %} Liste des créneaux horaires à venir {% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset ('assets/css/manage-members.css') }}">{% endblock %}

{% block main %}
<section>
    <h2>Liste des utilisateurs</h2>
    <table>
        <thead>
            <tr>
                <td>n°</td>
                <td>Débute à</td>
                <td>Termine à</td>
                <td>Membre</td>
                <td>Supprimer</td>
            </tr>
        </thead>
        <tbody>
            {% for slot in slots %}
            <tr>
                <td>{{ slot.id }} </td>
                <td>{{ slot.startAt()|date('d-m-Y H:i') }}</td>
                <td>{{ slot.endAt()|date('d-m-Y H:i') }}</td>
                <td>{{ slot.memb ? slot.memb.firstName : slot.lesson.name }}</td>
                <td><a href="{{ path ('app_account_manage_delete_slot', {"slotId": slot.id}) }}" class="button">Supprimer</a></td>
           </tr>
            {% endfor %}
        </tbody>
        <tfoot>
        
        </tfoot>
    </table>
</section>
{% include "/Back/common/_button-back.html.twig" %}
{% endblock %}

