{% extends "base.html.twig" %}
{% block title %} Mon historique de reservation {% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset ('assets/css/manage-members.css') }}">{% endblock %}

{% block main %}
<section>
    <h2>Liste des membres</h2>
    <table>
        <thead>
            <tr>
                <td>Email utilisateur</td>
                <td>Nom et prénom du membre</td>
                <td>Age</td>
                <td>Nombre de réservations</td>
                <td>Modifier</td>
                <td>Supprimer</td>
            </tr>
        </thead>
        <tbody>
            {% for member in members %}
            <tr>
                <td>{{ member.getUser().getEmail()}} </td>
                <td>{{ member.firstName() }} {{ member.lastName() }}</td>
                <td>{{ member.age }} ans</td>
                <td>{{ member.getSlots()|length }} heure(s)</td>
                <td><a href="{{ path ('app_account_manage_modify_member', {"memberId": member.id}) }}" class="button">Modifer</a></td>
                <td><a href="{{ path ('app_account_manage_delete_member', {"memberId": member.id}) }}" class="button">Supprimer</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</section>
{% include "/Back/common/_button-back.html.twig" %}

{% endblock %}

